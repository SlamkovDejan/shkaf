[flake8]
ignore = E501,
         # Line break before binary operator (rule is incompatible with black)
         W503,
         # Following black's recommendation; line-length done by B950
         E203,
         # Whitespace before ":" (rule is incompatible with black)
         T100,
         T101,
         B008
         # Ignoring todos for the moment since the legacy code has many
exclude = .git,
          .poetry,
          .mypy_cache,
          .venv,
          .vscode,
          __pycache__,
          dist,
          scripts,

max-complexity = 7
